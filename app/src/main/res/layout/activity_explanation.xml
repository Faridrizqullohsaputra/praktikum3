<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Explanation Screen"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="24dp" />

        <!-- Name Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/txtNamaMahasiswa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Muhammad Arya Wiraga"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- NIM Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NIM"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/txtNIM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="221112"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Class Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Class"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/txtKelas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TIF RP 221 PB"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="16dp" />

        <!-- Explanation Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Explanation"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/txtExplanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aplikasi ini dibuat untuk mengelola request barang dan jasa. Terdapat 2 fitur utama yaitu Create Request Barang dan Create Request Jasa yang memungkinkan user untuk mengisi form dengan data yang dibutuhkan seperti nama, jumlah, satuan, tanggal, deskripsi, dan status."
            android:textSize="14sp"
            android:textColor="#666666"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>
</ScrollView>